{
  "name": "sequelize_typescript_starter",
  "version": "0.0.0",
  "description": "TypeScript + Sequelize + PostgreSQL + Express API Server",
  "author": "",
  "license": "ISC",
  "scripts": {
    "format": "npx prettier --write ./src",
    "start": "npm run build && cross-env NODE_ENV=production node dist/server.js",
    "start:dev": "cross-env NODE_ENV=development nodemon dist/server.js",
    
    "build": "swc src -d dist --source-maps --copy-files",
    "build:dev": "swc src -d dist --source-maps --copy-files -w",

    "run:dev": "cross-env NODE_ENV=development concurrently \"npm run build:dev\" \"npm run start:dev\"",

    "test": "jest --forceExit --detectOpenHandles",
    "test:dev": "cross-env NODE_ENV=test jest --watch --coverage --verbose --testTimeout=10000 --detectOpenHandles",
    
    "migrate:dev": "cross-env NODE_ENV=development npx sequelize-cli db:migrate",
    "migrate:dev:undo:last": "cross-env NODE_ENV=development npx sequelize-cli db:migrate:undo",
    "migrate:dev:undo": "cross-env NODE_ENV=development npx sequelize-cli db:migrate:undo:all",
    "migrate:test": "cross-env NODE_ENV=test npx sequelize-cli db:migrate",
    "migrate:test:undo": "cross-env NODE_ENV=test npx sequelize-cli db:migrate:undo:all",
    
    "seed:dev": "cross-env NODE_ENV=development npx sequelize-cli db:seed",
    "seed:dev:all": "cross-env NODE_ENV=development npx sequelize-cli db:seed:all",
    "seed:dev:undo": "cross-env NODE_ENV=development npx sequelize-cli db:seed:undo",
    "seed:dev:undo:all": "cross-env NODE_ENV=development npx sequelize-cli db:seed:undo:all",
    "seed:test": "cross-env NODE_ENV=test npx sequelize-cli db:seed:all",
    "seed:test:undo": "cross-env NODE_ENV=test npx sequelize-cli db:seed:undo:all",
    
    "deploy:prod": "npm run build && pm2 start ecosystem.config.js --only prod",
    "deploy:dev": "pm2 start ecosystem.config.js --only dev"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.1",
    "compression": "^1.7.4",
    "concurrently": "^7.3.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "envalid": "^7.1.0",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "hpp": "^0.2.3",
    "http-status-codes": "^2.2.0",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "pg": "^8.7.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.6.5",
    "swagger-jsdoc": "^6.0.0",
    "swagger-ui-express": "^4.1.6",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.5"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.51",
    "@swc/core": "^1.2.108",
    "@types/bcrypt": "^5.0.0",
    "@types/compression": "^1.7.1",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.11",
    "@types/express": "^4.17.13",
    "@types/hpp": "^0.2.1",
    "@types/jest": "27.4.x",
    "@types/jsonwebtoken": "^8.5.4",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.0.1",
    "@types/sequelize": "^4.28.10",
    "@types/supertest": "^2.0.11",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "cross-env": "^7.0.3",
    "husky": "^7.0.1",
    "jest": "27.4.x",
    "node-config": "^0.0.2",
    "node-gyp": "^8.1.0",
    "nodemon": "^2.0.9",
    "pm2": "^5.1.0",
    "prettier": "^2.3.2",
    "sequelize-cli": "^6.2.0",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.4.0",
    "tsc-alias": "^1.4.1",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.5.2"
  }
}
